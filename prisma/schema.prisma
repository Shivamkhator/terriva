generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters", "postgresqlExtensions"]
  output          = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
    extensions = [vector]
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  accounts Account[]
  sessions Session[]

  emailNotifications Boolean @default(false)
  
  periods    Period[]
  dailyFlows DailyFlow[]

  cycleInsight CycleInsight?

  embeddings Embedding[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Period {
  id        String    @id @default(cuid())
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  startDate DateTime
  endDate   DateTime?

  @@unique([userId, startDate])
  @@index([userId])
}

model DailyFlow {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  date      DateTime
  intensity Int // 0 = None, 1 = Light, 2 = Medium, 3 = Heavy

  @@unique([userId, date])
  @@index([userId])
}

model CycleInsight {
  id              String    @id @default(cuid())
  userId          String    @unique
  avgCycleLength  Int?
  avgPeriodLength Int?
  nextPeriodDate  DateTime?
  totalPeriods    Int

  lastPeriodReminderSent DateTime?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Embedding {
  id        String   @id @default(cuid())
  userId    String
  source    String   // period | flow | insight
  sourceId  String
  content   String
  vector    Unsupported("vector(768)")
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}
